<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chatofy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dt2_blue</item>
        <item name="colorPrimaryVariant">@color/dt2_deepBlue</item>
        <item name="colorOnPrimary">@color/dt2_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dt2_yellow</item>
        <item name="colorSecondaryVariant">@color/dt2_pink</item>
        <item name="colorOnSecondary">@color/dt2_deepBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="authHeader">
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="android:textColor">@color/lt1_magenta</item>
    </style>

    <style name="authSubHeader">
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="authButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/auth_button</item>
    </style>

    <style name="authTextBox">
        <item name="android:background">@drawable/auth_text_box</item>
    </style>

    <style name="callTextBox" parent="authTextBox">
        <item name="android:drawableStart">@drawable/call</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">Enter mobile number</item>
    </style>

</resources>